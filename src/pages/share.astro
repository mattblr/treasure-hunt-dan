---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Mobile Only - Danny's Tasks">
	<main class="w-full min-h-screen px-5 py-8 flex flex-col items-center justify-center text-center bg-gradient-to-b from-gray-900 to-black">
		<div class="max-w-md mx-auto">
			
			<h1 class="font-display text-3xl md:text-4xl font-bold text-white mb-4">
				Need to share this with someone?
			</h1>
			
			<p class="text-lg text-gray-300 mb-8">
				I text you the link, but anyway... scan this QR code
			</p>
			
			<div class="bg-gray-800 rounded-lg p-6 mb-8">
				<!-- Placeholder for QR code - would need actual implementation -->
				<div class="w-34 h-34 bg-gray-700 mx-auto rounded-lg flex items-center justify-center">
					<img src="/qr.png" alt="QR Code" class="w-30 h-30 object-contain" />
				</div>
			</div>
			
		</div>
	</main>
</BaseLayout>

<style>
	/* Override mobile-only styles for this page */
	body {
		touch-action: auto !important;
	}
	
	* {
		-webkit-user-select: text !important;
		-khtml-user-select: text !important;
		-moz-user-select: text !important;
		-ms-user-select: text !important;
		user-select: text !important;
	}
</style>
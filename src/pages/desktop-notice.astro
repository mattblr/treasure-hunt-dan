---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Mobile Only - Danny's Tasks">
	<main class="w-full min-h-screen px-5 py-8 flex flex-col items-center justify-center text-center bg-gradient-to-b from-gray-900 to-black">
		<div class="max-w-md mx-auto">
			<!-- Mobile icon -->
			<div class="mb-8">
				<svg class="w-24 h-24 mx-auto text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
				</svg>
			</div>
			
			<h1 class="font-display text-3xl md:text-4xl font-bold text-white mb-4">
				Mobile Only Experience
			</h1>
			
			<p class="text-lg text-gray-300 mb-8">
				Danny's Task Manager is designed exclusively for mobile devices. Please visit this page on your smartphone or tablet for the best experience.
			</p>
			
			<div class="bg-gray-800 rounded-lg p-6 mb-8">
				<p class="text-sm text-gray-400 mb-2">Or scan this QR code with your mobile device:</p>
				<!-- Placeholder for QR code - would need actual implementation -->
				<div class="w-32 h-32 bg-gray-700 mx-auto rounded-lg flex items-center justify-center">
					<span class="text-gray-500 text-xs">QR Code</span>
				</div>
			</div>
			
			<p class="text-sm text-gray-500">
				Mobile viewport: 375px - 430px
			</p>
		</div>
	</main>
</BaseLayout>

<style>
	/* Override mobile-only styles for this page */
	body {
		touch-action: auto !important;
	}
	
	* {
		-webkit-user-select: text !important;
		-khtml-user-select: text !important;
		-moz-user-select: text !important;
		-ms-user-select: text !important;
		user-select: text !important;
	}
</style>